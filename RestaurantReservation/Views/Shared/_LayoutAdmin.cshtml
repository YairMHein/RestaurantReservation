    <script src="@Url.Content("~/Content/assets/js/jquery.slicknav.min.js")" type="text/javascript"></script>

    @*<script src="@Url.Content("~/Content/assets/vendors/data-table/js/dataTables.bootstrap4.min.js")" type="text/javascript" ></script>*@
