    <script src="@Url.Content("~/Content/assets/vendors/data-table/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/assets/vendors/sweetalert2/js/sweetalert2.all.min.js")" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Content/assets/vendors/data-table/js/responsive.bootstrap.min.js")" type="text/javascript" ></script>*@

    <script src="@Url.Content("~/Content/assets/js/moment.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendors/lightpick/js/lightpick.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendors/mdtimepicker/mdtimepicker.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/js/main.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/site.js" )" type="text/javascript"></script>

    <script src="@Url.Content("~/Content/assets/vendors/select2/select2.min.js")"></script>

    <script src="@Url.Content("~/Content/assets/vendors/summernote/dist/summernote-bs4.min.js")"></script>
    <!-- Ladda Button Js -->
    <script src="@Url.Content("~/Content/assets/vendors/ladda-button/js/spin.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendors/ladda-button/js/ladda.jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/assets/vendors/ladda-button/js/ladda.min.js")"></script>

    <!-- Ladda Button init Js -->
    <script src="@Url.Content("~/Content/assets/js/init/ladda-button.js")"></script>

    <script src="@Url.Content("~/Content/assets/vendors/LitePicker/litepicker.js")"></script>

    @RenderSection("scripts", required: false)

</body>

