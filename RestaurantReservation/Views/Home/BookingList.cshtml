@model RestaurantReservation.Models.ReservationViewModel

@{
    ViewBag.Title = "BookingList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<RestaurantReservation.Models.ReservationViewModel> lstBookings = Model.lstBookings;
}

<style>

    .reservation-list {
        margin-top: 20px;
    }

    .reservation-card {
        background-color: #ffffff;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
    }

        .reservation-card h5 {
            margin-bottom: 10px;
        }
</style>

<h1 class="my-4">Reservation List</h1>
<div class="reservation-list" style="margin-bottom:20px;">
    @if (lstBookings.Count > 0)
            {
        foreach(var item in lstBookings)
                {
            <div class="reservation-card">
                <h5>Restaurant Name: @item.RestaurantName</h5>
                <p><strong>Number of People:</strong>  @item.NumberPeople</p>
                <p><strong>Date:</strong> @item.sReservationDate</p>
                <p><strong>Time:</strong> @item.sReservationTime</p>
                <p><strong>Remark:</strong> @item.Remark</p>
            </div>
                }
}
else
            {
                <div><center>Please make your first reservation!</center></div>
            }

</div>