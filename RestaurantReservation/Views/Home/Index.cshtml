        @if (lstrestaurant.Count > 0)
        {
            <ul class="restaurant-list" id="restaurantList">
                @foreach (var item in lstrestaurant)
                {
                    <li class="restaurant-item">
                        <div>
                            <h2>@item.Name</h2>
                            <p>Cuisine: @item.Type</p>
                            <p>Open Hours: @item.OpenDays , @item.FromTimeClock @item.FromTimeAMPM - @item.ToTimeClock @item.ToTimeAMPM</p>
                        </div>
                        <a href="@Url.Action("Reserve","Home", new { restaurant = item.Id })" class="reserve-button">Reserve Now</a>
                    </li>
                }
            </ul>
        }
